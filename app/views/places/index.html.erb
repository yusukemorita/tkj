<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <h1 style="color:white;">卓球場一覧</h1>

  <div class="row" style="color:white;">
    <div class='col-sm-4'><h3>卓球場名</h3></div>
    <div class='col-sm-5'><h3>ホームページ</h3></div>
    <div class='col-sm-1'></div>
    <div class='col-sm-1'></div>
    <div class='col-sm-1'></div>
  </div>
  <br>
  <div class="row" style="color:white">
    <% @places.each do |place| %>

      <div class='col-sm-4'><%= place.title %></div>

      <div class='col-sm-5 place_list'>
        <% if place.url.size > 0 %>
          <a href = <%= place.url %>><%= truncate(place.url, length: 40) %></a>
        <% else %>
          未登録
        <% end %>
      </div>

      <div class='col-sm-1'><%= link_to '詳細', place, class:'btn btn-info' %></div>
      <div class='col-sm-1'><%= link_to '編集', edit_place_path(place), class:'btn btn-info' %></div>

      <% if user_signed_in? %>
        <div class='col-sm-1'><%= link_to '削除', place, class:'btn btn-danger', medivod: :delete, data: { confirm: 'Are you sure?' } %></div>
      <% end %>

    <% end %>
  </div>
  <br>
  <%= link_to '新しい卓球場を登録', new_place_path, class:"btn btn-success" %>

</div>
<br>

