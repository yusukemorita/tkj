<div class='container text-center vertical-align-parent'>
  <div class="signup-div wf-mplus1p vertical-align-child">
    <h2>新規ユーザー登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field signup-field">
        <span class='signup-label'>メールアドレス</span><br>
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>

      <div class="field signup-field">
        <span class='signup-label'>
          パスワード
          <% if @minimum_password_length %>
            （最小<%= @minimum_password_length %>文字）</em>
          <% end %>
        </span>
        <br>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      </div>

      <div class="field signup-field">
        <span class='signup-label'>パスワード（確認用）</span><br>
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
      </div>

      <div class="actions signup-btn">
        <%= f.submit 'ユーザー登録', class: 'btn btn-primary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
