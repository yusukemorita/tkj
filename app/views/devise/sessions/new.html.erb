<div class='container text-center vertical-align-parent'>
  <div class="signup-div wf-mplus1p vertical-align-child">
    <h2>ログイン</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="field signup-field">
        <span class='signup-label'>メールアドレス</span><br>
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>

      <div class="field signup-field">
        <span class='signup-label'>
          パスワード
          <% if @minimum_password_length %>
            （最小<%= @minimum_password_length %>文字）</em>
          <% end %>
        </span>
        <br>
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field signup-field">
          <%= f.check_box :remember_me, class: 'remember-me-checkbox' %>
          <span class='signup-label'>　メールアドレスを記憶</span><br>
        </div>
      <% end -%>

      <div class="actions signup-btn">
        <%= f.submit 'ログイン', class: 'btn btn-primary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
